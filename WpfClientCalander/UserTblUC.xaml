<UserControl x:Class="WpfClientCalander.UserTblUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClientCalander"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="AntiqueWhite"
             mc:Ignorable="d"
             d:DesignHeight="330"
             d:DesignWidth="700">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListView x:Name="usersListView"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                  Grid.Column="0"
                  SelectionChanged="usersListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="User Name"
                                    Width="Auto"
                                    DisplayMemberBinding="{Binding UserName}" />
                    <GridViewColumn Header="PhoneNum"
                                    Width="Auto"
                                    DisplayMemberBinding="{Binding PhoneNum}" />
                    <GridViewColumn Header="Email"
                                    Width="Auto"
                                    DisplayMemberBinding="{Binding Email}" />
                    <GridViewColumn Header="Manager?"
                                    Width="Auto"
                                    DisplayMemberBinding="{Binding isManager}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
