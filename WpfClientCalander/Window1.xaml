<Window x:Class="WpfClientCalander.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientCalander"
        mc:Ignorable="d"
        Title="Window1"
        Height="660"
        Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Normal"
        FontFamily="Poppins">
    <Grid Background="AntiqueWhite" x:Name="topGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="37" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Foreground="Maroon"
                   Text="{Binding Path=GroupName}" Margin="0 20 0 20" FontWeight="Bold"/>
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding Path=GroupDescription}"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="Black"
                       Margin="10" />
            <TextBlock VerticalAlignment="Center"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="#FF3C2929"
                       Margin="7">
                <Run Text="{Binding Path=GroupAdmin.FirstName}" />
                <Run Text="{Binding Path=GroupAdmin.LastName}" /></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox Text="month"></ComboBox>
            <ComboBox Text="year"></ComboBox>
        </StackPanel>
        <WrapPanel x:Name="calWP" Grid.Row="3" Margin="8, 0, 8, 0"/>
