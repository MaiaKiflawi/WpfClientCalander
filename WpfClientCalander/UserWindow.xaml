<Window x:Class="WpfClientCalander.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientCalander"
        mc:Ignorable="d"
        Title="UserWindow"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Normal"
        FontFamily="Poppins">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleForWindows.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="10"
            Background="AntiqueWhite">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Start: GridColumn Left -->
            <Border CornerRadius="10 0 0 10"
                    Padding="10"
                    Background="#6d4c41">
                <Grid x:Name="gridMenu">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="130" />
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>
                    <!-- Logo -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                        <Ellipse Height="50"
                                 Width="50"
                                 VerticalAlignment="Center"
                                 Margin="10 0 0 0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Images/projectLogo.jpg"
                                            Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="My Shared Calender"
                                   Foreground="#1b0000"
                                   FontWeight="Bold"
                                   FontSize="24"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="5 0 0 0"
                                   Width="176" />
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <RadioButton x:Name="rdHome"
                                     Content="Home"
                                     Style="{DynamicResource MenuRadioButtonStyle}"
                                     Tag="{DynamicResource home}"
                                     Margin="0 30 0 0"
                                     Click="rdHome_Click" />
                        <RadioButton x:Name="rdAnalytics"
                                     Content="Analytics"
                                     Style="{DynamicResource MenuRadioButtonStyle}"
                                     Tag="{DynamicResource analytics}"
                                     Margin="0 1 0 1"
                                     Click="rdAnalytics_Click" />
                        <RadioButton x:Name="rdMessages"
                                     Content="Messages"
                                     Style="{DynamicResource MenuRadioButtonStyle}"
                                     Tag="{DynamicResource messages}"
                                     Click="rdMessages_Click" />
                        <RadioButton x:Name="rdCollections"
                                     Content="Collections"
                                     Style="{DynamicResource MenuRadioButtonStyle}"
                                     Tag="{DynamicResource collections}"
                                     Margin="0 1 0 1"
                                     Click="rdCollections_Click" />
                        <RadioButton x:Name="rdUsers"
                                     Content="Users"
                                     Style="{DynamicResource MenuRadioButtonStyle}"
                                     Tag="{DynamicResource users}"
                                     Click="rdUsers_Click" />
                        <Separator Margin="20 20"
                                   Background="{DynamicResource TertiaryBackgroundColor}" />
                        <RadioButton x:Name="rdNotifications"
                                     Content="Notifications"
                                     Style="{DynamicResource MenuRadioButtonStyle}"
                                     Tag="{DynamicResource notifications}"
                                     Margin="0 1 0 1" />
                        <RadioButton x:Name="rdSettings"
                                     Content="Settings"
                                     Style="{DynamicResource MenuRadioButtonStyle}"
                                     Tag="{DynamicResource settings}" />
                    </StackPanel>
                </Grid>
            </Border>
            <!-- End: GridColumn Left -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!-- Start: Button Close | Restore | Minimize -->
                <StackPanel Grid.Row="0"
                            Grid.Column="4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,10,0"
                            Height="30"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft">
                    <Button x:Name="btnClose"
                            Style="{DynamicResource IconButtonsStyle}"
                            Content="{DynamicResource close}"
                            Click="btnClose_Click"
                            Tag="IsCloseButton" />
                    <Button x:Name="btnRestore"
                            Margin="5 0"
                            Click="btnRestore_Click"
                            Tag="IsRestoreButton">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}"
                                   BasedOn="{StaticResource IconButtonsStyle}">
                                <Setter Property="Content"
                                        Value="{DynamicResource maximize}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=home, Path=WindowState}"
                                                 Value="Maximized">
                                        <Setter Property="Content"
                                                Value="{DynamicResource restore}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btnMinimize"
                            Style="{DynamicResource IconButtonsStyle}"
                            Content="{DynamicResource minimize}"
                            Click="btnMinimize_Click"
                            Tag="IsMinimizeButton" />
                </StackPanel>
                <!-- End: Button Close | Restore | Minimize -->
                <!-- Start: Frame Container -->
                <Border Grid.Row="1"
                        CornerRadius="0 0 5 0"
                        Background="Transparent">
                    <Frame x:Name="frameContent"
                           NavigationUIVisibility="Hidden"
                           Margin="10" />
                </Border>
                <!-- End: Frame Container -->
            </Grid>
        </Grid>
    </Border>
</Window>
